<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1024"
        x:Class="Avalonia.NETCoreApp.MainWindow"
        Title="NetChat - P1">
        
        <Grid ColumnDefinitions="100*, 50" RowDefinitions="50*, 50">
            <StackPanel Name="chatWindow" Grid.Row="0" Grid.Column="0" Orientation="Vertical"  Margin="5">
                
            </StackPanel>
            <TextBox Name="MessageInput" AcceptsReturn="True" TextWrapping="Wrap" Grid.Row="1" Grid.Column="0"/>
            <Button Grid.Row="1" Grid.Column="1" Click="OnButtonSend" >
                Send
            </Button>
        </Grid>
</Window>
